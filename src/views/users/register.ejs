<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %> 
    <title>Crear cuenta</title>
    <link rel="stylesheet" href="/css/register.css" />
  </head>
  <body>
    <%- include('../partials/header.ejs') %> 
    <main class="background">
      <div class="main-card">
        <h1>Crea tu cuenta</h1>
        <% if (locals.errors) { %>
          <% for( let oneError in errors) { %>
            <p><%= errors[oneError].msg %> </p>
          <% } %>
        <% } %>
        <form action="/user/register" method="POST" enctype="multipart/form-data">
          <div class="register-line-item">
            <div class="icon"><i class="fa-solid fa-phone"></i></i></div>
            <label for="phone"></label>
            <input
              class="input-text"
              type="tel"
              name="phone"
              placeholder="Telefono"
              value="<%= locals.oldData ? oldData.phone : null %>"
            />
          </div>
            <div class="register-line-item">
              <div class="icon"><i class="fa-solid fa-user"></i></div>
              <label for="name"></label>
              <input
                class="input-text"
                type="text"
                name="name"
                placeholder="Nombre"
                value="<%= locals.oldData ? oldData.name : null %>"
              />
            </div>
            <div class="register-line-item">
              <div class="icon"><i class="fa-solid fa-envelope"></i></div>
              <label for="email"></label>
              <input
                class="input-text"
                type="email"
                name="email"
                placeholder="Email"
                value="<%= locals.oldData ? oldData.email : null %>"
              />
            </div>
            <div class="register-line-item">
            <div class="icon"><i class="fa-solid fa-lock"></i></div>
            <label for="password"></label>
            <input
              class="input-text"
              type="password"
              name="password"
              placeholder="ContraseÃ±a"
              value="<%= locals.oldData ? oldData.password : null %>"
            />
          </div>
            <div class="register-line-item">
            <div class="icon"><i class="fa-solid fa-lock"></i></div>
          <label for="avatar"></label>
          <input type="file" accept=".jpg" name="avatar" id="avatar" class="input-text" placeholder="Imagen" />
          </div>
            <div class="buttons">
              <div class="button-card">
                <button type="submit" class="button">CONFIRMAR</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>